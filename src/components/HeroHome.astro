---
const props = Astro.props;
console.log("hero", props);
const { image, title, text, overlayShow, overlayAlpha, overlayColor } = props;

const cn =
  overlayColor && overlayAlpha < 10
    ? `background-color:${overlayColor}!important;opacity: 0.${overlayAlpha}!important;`
    : overlayColor
      ? `background-color: ${overlayColor};`
      : "";
---

<style lang='scss'>
  @import "../styles/variables";

  .heroHome {
    position: relative;
    width: 100%;
    max-height: 100%;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .heroHome h1 {
    font-size: 4rem;
    color: white;
    margin-bottom: 1rem;
  }
  .heroHome p {
    font-size: 2rem;
    color: white;
    margin-top: 0.5rem;
    margin-bottom: 1rem;
  }
  .heroHome .container {
    position: relative;
    z-index: 1;
  }
  // .heroHome .bg-img {
  //   position: absolute;
  //   top: 0;
  //   left: 0;
  //   width: 100%;
  //   height: 100%;
  //   z-index: -1;
  // }
  .heroHome .bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: $overlay-bg-color;
    z-index: 0;
  }
</style>

<section class='heroHome'>
  <!-- - img-->
  <div class='bg-img img-responsive-wrapper'>
    <div class='img-responsive'>
      <div class='img-responsive-wrapper ratio ratio-16x9'>
        <figure>
          <img src={ image} alt={title} class='w-100 h-100 object-fit-cover' />
        </figure>
      </div>
    </div>
  </div>
  <!-- - texts-->
  <div class='container'>
    <div class='row'>
      <div class='col-12'>
        <div class=''>
          <h1>{title}</h1>
          <p class='d-none d-lg-block'>
            {text}
          </p>
        </div>
      </div>
    </div>
  </div>
  <!-- - overlay-->
  {overlayShow && <div class='bg-overlay' style={cn} />}
</section>
